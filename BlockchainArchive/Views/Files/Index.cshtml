@model IEnumerable<BlockchainArchive.Models.FileViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Upload">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StorageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastHistoryEntry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StorageUrl)
                </td>
                <td>
                    @if (item.LastHistoryEntry != null)
                    {
                        var dateTime = item.LastHistoryEntry.Timestamp.ToString("dd-MM-yyyy HH:mm:ss");
                        var value = string.Format($"{item.LastHistoryEntry.Status} - {dateTime}");

                        @Html.DisplayFor(modelitem => value);
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Guid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Guid">Delete</a> |
                    <a asp-action="Verify" asp-route-id="@item.Guid">Verify</a>
                </td>
            </tr>
        }
    </tbody>
</table>
