@model BlockchainArchive.Models.FileViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>File</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StorageUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StorageUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastHistoryEntry)
        </dt>
        <dd class="col-sm-10">
            @if (Model.LastHistoryEntry != null)
            {
                var dateTime = Model.LastHistoryEntry.Timestamp.ToString("dd-MM-yyyy HH:mm:ss");
                var value = string.Format($"{Model.LastHistoryEntry.Status} - {dateTime}");

                @Html.DisplayFor(modelitem => value);
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Guid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
